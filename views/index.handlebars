    <a class="nav-link active" href="#">Home</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="#">Sign Up</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="#">Track Your Progress</a>
  </li>
</ul>
<br>
{{!-- dropdown to select pre-written course names --}}
<div class="container">
    <div class="row">
        <div class="col" id="dropdown">
                <p class="h3">Pre-selcted Courses</p>
                <br>
                <select class="class-selection">
                    <option class="selections"><p class="options">Hamburger 1</p></option>
                    <option class="selections"><p class="options">Hamburger 2</p></option>
                    <option class="selections"><p class="options">Hamburger 3</p></option>
                    <option class="selections"><p class="options">Hamburger 4</p></option>
                </select>
        </div>
{{!-- form to create own course --}}
        <div class="col">
            <form id="create" action="/">
            <p class="h3">Create Your Own Course</p>
            <input type="text" class="input"/>
            </label>
            <br><br>
            <input type="button" class="btn" id="submit" value="Submit">
        </form>
        </div>
    </div>
</div>
<br>
{{!-- list the current courses linked to your account --}}
<div class="classes"> 
    <p class="h3">List of Courses in Progress</p>
    <ul>
       {{#each course}}
       <li>{{this.name}}</li>
       {{/each}}
    </ul>
</div>
<br>
